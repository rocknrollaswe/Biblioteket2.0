<Window x:Class="Bibblan.Views.CreateUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibblan.Views"
        mc:Ignorable="d"
        Title="CreateUser" Height="450" Width="800">
    <Grid Background="#FF494949">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Rectangle HorizontalAlignment="Center" Height="374" VerticalAlignment="Center" Width="728" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="4" Fill="#FFF1F1F1"/>
        <TextBlock HorizontalAlignment="Left" Height="67" Margin="1,30,0,0" Text=" Skapa Konto" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" TextWrapping="Wrap" VerticalAlignment="Top" Width="622" FontFamily="Arial" FontSize="52" Foreground="White" FontWeight="Normal" FontStyle="Italic" TextDecorations="{x:Null}" Background="#FF40B0D3"/>
        <Button x:Name="CreateUserButton" Content="Skapa Användare" Click="CreateUserButton_Click" HorizontalAlignment="Left" Height="48" Margin="38,21,0,0" Grid.Row="3" Grid.Column="2" VerticalAlignment="Top" Width="214" FontSize="22" Foreground="White" BorderBrush="{x:Null}" Background="#FF40B0D3"/>
        <TextBox x:Name="firstName" LostFocus="FirstLost"  Grid.Row="1" Margin="141,32,83,32" MaxWidth="295" MaxHeight="41.04" FontSize="30" TextWrapping="Wrap" Grid.ColumnSpan="2"/>
        <TextBox x:Name="firstNameInputFocus" GotFocus="FirstFocus" Text="Förnamn" Foreground="Silver"  Margin="141,28,83,29" MaxWidth="295" MaxHeight="41.04" FontSize="30" TextWrapping="Wrap" Grid.ColumnSpan="2" Grid.Row="1"/>
        <TextBox x:Name="lastName" LostFocus="LastLost" Foreground="Silver"  Margin="141,85,84,87" MaxWidth="295" MaxHeight="41.04" FontSize="30" TextWrapping="Wrap" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <TextBox x:Name="lastNameInputFocus" GotFocus="LastFocus" Text="Efternamn" Foreground="Silver"  Margin="141,85,84,87" MaxWidth="295" MaxHeight="41.04" FontSize="30" TextWrapping="Wrap" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <TextBox x:Name="eMail" LostFocus="EmailLost" Margin="141,33,84,33" MaxWidth="295" MaxHeight="41.04" FontSize="30" TextWrapping="Wrap" Grid.Row="2" Grid.ColumnSpan="2"/>
        <TextBox x:Name="emailInputFocus" GotFocus="EmailFocus" Text="Email" Foreground="Silver"  Margin="141,32,83,32" MaxWidth="295" MaxHeight="41.04" FontSize="30" TextWrapping="Wrap" Grid.Row="2" Grid.ColumnSpan="2"/>
        <TextBox x:Name="SSN" LostFocus="SSNLost" Margin="141,82,88,94" MaxWidth="295" MaxHeight="41.04"  FontSize="30" TextWrapping="Wrap" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <TextBox x:Name="SSNInputFocus" GotFocus="SSNFocus" Text="Personnummer" Foreground="Silver"  Margin="1,82,88,94" MaxWidth="295" MaxHeight="41.04" FontSize="30" TextWrapping="Wrap" Grid.RowSpan="2" Grid.Row="2" Grid.Column="1"/>
        <TextBox x:Name="userName" LostFocus="UserLost" Margin="0,34,106,35" MaxWidth="295" MaxHeight="41.04" FontSize="30" TextWrapping="Wrap" Grid.Column="2" Grid.Row="1"/>
        <TextBox x:Name="userNameInputFocus" GotFocus="UserFocus" Text="Användarnamn" Foreground="Silver"  Margin="0,33,104,36" MaxWidth="295" MaxHeight="41.04" FontSize="30" TextWrapping="Wrap" Grid.Column="2" Grid.Row="1"/>
        <TextBox x:Name="passWord" LostFocus="PassLost" Foreground="Silver"  Margin="0,85,106,87" MaxWidth="295" MaxHeight="41.04" FontSize="30" TextWrapping="Wrap" Grid.Row="1" Grid.RowSpan="2" Grid.Column="2"/>
        <TextBox x:Name="passwordInputFocus" GotFocus="PassFocus" Text="Lösenord" Foreground="Silver"  Margin="0,86,106,87" MaxWidth="295" MaxHeight="41.04" FontSize="30" TextWrapping="Wrap" Grid.Row="1" Grid.Column="2" Grid.RowSpan="2"/>
        <Image x:Name="menu" HorizontalAlignment="Left" Height="61" Margin="76,30,0,0" VerticalAlignment="Top" Width="61" Source="/Views/Menu.png"/>
    </Grid>
</Window>
