<Page x:Class="Bibblan.Views.Rapport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bibblan.Views"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Rapport">

    <Grid Margin="0, 0, 0, 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Background="#80B3B5" Panel.ZIndex="-2" Opacity="0.3" Grid.Column="0" Grid.ColumnSpan="2"/>

        <Border x:Name="LVReportUser" CornerRadius="20" Background="AliceBlue" Opacity="1" Margin="77,169,548,200" Grid.Column="0" Grid.ColumnSpan="2" Visibility="Visible">
            <ListView x:Name="LVReportUserView" BorderBrush="Transparent" Background="Transparent" Width="576" Height="416" UseLayoutRounding="True" HorizontalAlignment="Center" VerticalAlignment="Top">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding UserId}" Header="ID" Width="111"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Firstname}" Header="Namn" Width="111"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Email}" Header="Email" Width="111"/>
                        <GridViewColumn DisplayMemberBinding="{Binding StockId}" Header="Bok" Width="111"/>
                        <GridViewColumn DisplayMemberBinding="{Binding ReturnDate}" Header="Returdatum" Width="111"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
        <Border x:Name="LVReportObject" CornerRadius="20" Background="AliceBlue" Opacity="1" Margin="77,169,548,200" Grid.Column="0" Grid.ColumnSpan="2" Visibility="Hidden">
            <ListView x:Name="LVReportObjectView" BorderBrush="Transparent" Background="Transparent" Width="564" Height="416" UseLayoutRounding="True" HorizontalAlignment="Center" VerticalAlignment="Top">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding StockId}" Header="ID" Width="50"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Isbn}" Header="ISBN" Width="50"/>
                        <GridViewColumn DisplayMemberBinding="{Binding BookTitle}" Header="Titel" Width="111"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Edition}" Header="Titel" Width="111"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Comment}" Header="Anledning" Width="111"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Condition}" Header="Skick" Width="111"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <WrapPanel Height="400" Width="500" Grid.Column="1" Margin="50 0 0 0">
            <StackPanel>
                <TextBox x:Name="epostTextBox" Width="200" Height="30" Text="E-post" FontSize="20" Margin="10 220 0 0" Foreground="LightGray"></TextBox>
            </StackPanel>
            <StackPanel>
                <TextBox Width="200" Height="30" Text="ISBN?" FontSize="20" Margin="75 220 0 0" Foreground="LightGray"></TextBox>
            </StackPanel>
        </WrapPanel>

        <WrapPanel Width="500" Height="50" Margin="70,200,0,0" Grid.Column="1" Orientation="Horizontal">
            <Button x:Name="seeUserButton" Style="{StaticResource ROB}" Content="Användare" Width="200" Height="50" FontSize="18" Click="seeUserButton_Click"/>
            <Button x:Name="seeDeletedObjects" Style="{StaticResource ROB}" Content="Borttagna Objekt" Width="200" Height="50" FontSize="18" Margin="80 0 0 0" Click="seeDeletedObjects_Click"/>
        </WrapPanel>

        <TextBlock  Grid.Column="0" Grid.ColumnSpan="2"
            Style="{StaticResource CardoFont}"  
            VerticalAlignment="Top" HorizontalAlignment="Left" 
            FontSize="50" Height="72" 
            Foreground="Black" 
            Panel.ZIndex="2"
            Margin="485,31,0,0" Width="292"><Run Language="en-gb" Text="Rapportering"/></TextBlock>
    </Grid>
</Page>
